<body>
    <div id="header_bar"></div>
    <script>
        $("#header_bar").load("/component/header_bar/header_bar_guest.html");
    </script>

    <div class="body-login d-flex justify-content-start align-items-stretch">
        <div class="body-right">
            <div class="body-right-top"></div>
            <div class="center-item">
                <input id="usernameTxb" type="textbox" class="textbox-1" placeholder="Username" onblur="isExistAccount()"> </input>
                <input id="passwordTxb" type="password" class="textbox-1" placeholder="Password"></input>
                <input id="password2Txb" type="password" class="textbox-1" placeholder="Password again"></input>
                <input id="emailTxb" type="textbox" class="textbox-1" placeholder="Email"></input>
                <input id="phoneTxb" type="textbox" class="textbox-1" placeholder="Phone Number"></input>
                <button onclick="OnSubmitButtonClick();" class="button-ok button-center"> Tạo tài khoản </button>
            </div>
            <div class="body-right-top"></div>
        </div>
    </div>

    <div id="footer"></div>
    <!-- footer  -->
    <script>
        $("#footer").load("/component/footer/footer.html");
    </script>

