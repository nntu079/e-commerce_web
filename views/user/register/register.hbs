        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>



<script>

 async function isExistAccount()  {
 
     var x = document.getElementById("usernameTxb");
    url='http://localhost:3000/user/isExistAccountAPI/'+x.value;


    fetch(url)
      .then(
        function(response) {
          if (response.status !== 200) {
            console.log('Lỗi');
            return true;
          }
          // parse response data
          response.json().then(data => {
            if(data=='1'){
                alert('Tài khoản đã tồn tại');
                x.value='';
            }

          })
        }
      )
      .catch(err => {
        console.log('Error :-S', err)
      });


    
}

</script>
