<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">

<!--Khai báo thư viện bootstrap và jquery-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">

<link rel="stylesheet" href="/component/button/button.css">
<link rel="stylesheet" href="/component/textbox/textbox-1.css">
<link rel="stylesheet" href="/component/checkbox/checkbox.css">
<link rel="stylesheet" href="/component/dropdown/dropdown.css">
<!--Khai báo file CSS-->

<link rel="stylesheet" href="/SELLER/add_product/add_product.css">


</head>
<body class = "body">
    <!--Header -->

    <div id = "header"></div>
    <!--Nav_bar -->
    <div id = "nav_bar"></div>
    <br>

    <form style="margin:5%" action="/seller/add_product" method="post" enctype="multipart/form-data" >

      <div class="form-group">
        <label >Tên sản phẩm</label>
        <input type="text" class="form-control" name="name" required>
      </div>

      <div class="form-group">
        <label >Giá muốn bán</label>
        <input type="number" class="form-control" name="price" required>
      </div>

      <div class="form-group">
        <label >Giá thị trường</label>
        <input type="number" class="form-control" name="old_price" required>
      </div>

      <div class="form-group">
        <label >Số sao</label>
        <input type="number" class="form-control" name="star" required>
      </div>

      <div class="form-group">
        <label >Thể loại</label>
        <select class="form-control" name="type">
          <option value="0">Điện thoại</option>
          <option value="1">Máy ảnh</option>
          <option value="2">Máy tính</option>
          <option value="3">Sách</option>
          <option value="4">Thời trang</option>
          <option value="5">Phụ kiện</option>
          <option value="6">Thể thao</option>
          <option value="7">Khác</option>
        </select>
      </div>

      <div class="form-group" >
        <label >Nhà cung cấp</label>
        <input type="text" class="form-control" name="supplier" required> 
      </div>


      <div class="form-group" >
        <label >Số lượng</label>
        <input type="number" class="form-control" name="state" required>
      </div>

      <div class="form-group" >
        <label >Thông tin chi tiết (ví dụ khối lượng, chiều dài, size, v.v tùy theo sản phẩm cụ thể)</label>
        <input type="text" class="form-control" name="detail" required> 
      </div>

      <div class="form-group">
        <label >Ảnh (3 ảnh)</label>
        <input type="file"  accept="image/*" name="photos" multiple id="image" required >
      </div>

      <input type="submit" value="upload" required>

    </form>
               

    <script>
    $("#image").on("change", function() {
        if ($("#image")[0].files.length != 3) {
            alert("You can select only 3 images");
            $(this).val('');
        }
    });
    </script>


    <!-- Script -->
    <script>
      function loadComponent(id, url){
          $("#" + id).load(url);
      }
      
      $(document).ready(function() {
          
          loadComponent("header", "/SELLER/component/header/header.html");
          loadComponent("nav_bar", "/SELLER/component/nav_bar/nav_bar.html");
          loadComponent("product_side_menu", "/SELLER/component/product_side_menu/product_side_menu.html")
          loadComponent("footer", "/SELLER/component/footer/footer.html")
          
      } );
  </script>


  </body>
</html>
